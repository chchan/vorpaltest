<h1>Listing items</h1>

<table>
  <tr>
    <th>Itemid</th>
    <th>Itemname</th>
    <th>Itemprice</th>
    <th>Itemdescription</th>
    <th>Itemtags</th>
  </tr>

<% for items in @items %>
  <tr>
    <td><%=h items.itemId %></td>
    <td><%=h items.itemName %></td>
    <td><%=h items.itemPrice %></td>
    <td><%=h items.itemDescription %></td>
    <td><%=h items.itemTags %></td>
    <td><%= link_to 'Show', items %></td>
    <td><%= link_to 'Edit', edit_items_path(items) %></td>
    <td><%= link_to 'Destroy', items, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

